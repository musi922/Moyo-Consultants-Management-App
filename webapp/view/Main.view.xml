<mvc:View
    controllerName="moyotech.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'moyotech/model/formatter'
    }">

    <Page id="mainPage">
        <customHeader>
            <Toolbar>
                <Button icon="sap-icon://menu2" type="Transparent" press=".onSideNavButtonPress"/>
                <Image src="./images/logo.webp" height="6rem"/>
                <MenuButton text="Home" type="Transparent"/>
                <ToolbarSpacer/>
                <SearchField placeholder="Search in Apps" width="25%"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://customer" type="Transparent"/>
                <Button icon="sap-icon://feedback" type="Transparent"/>
                <Button icon="sap-icon://globe" type="Transparent"/>
                <Button icon="sap-icon://user-settings" type="Transparent"/>
                <Button icon="sap-icon://log" type="Transparent"/>
                <Avatar initials="MR"/>
            </Toolbar>
        </customHeader>

        <subHeader>
            <Toolbar>
                <Link text="Home" emphasized="true"/>
                <Link text="Employees"/>
                <MenuButton text="Customers" type="Transparent"/>
                <Link text="Products"/>
                <MenuButton text="Categories" type="Transparent"/>
                <Link text="Orders"/>
                <Link text="Suppliers"/>
                <MenuButton text="Regions" type="Transparent"/>
                <MenuButton text="Invoices" type="Transparent"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://menu" type="Transparent"/>
            </Toolbar>
        </subHeader>

        <content>
        </content>
    </Page>
</mvc:View>